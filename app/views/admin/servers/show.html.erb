<%= render partial: 'form' %>
<% unless @server.public_notes.blank? %>
<h3>Public Notes</h3>
<pre>
<%= @server.public_notes %>
</pre>
<% end %>
<h3>Additional information</h3>
<dl>
  <dt>Geo Location</dt>
  <dd><%= @server.country.name %>, <%= @server.region.name %> (<%= @server.lat %>/<%= @server.lng %>)</dd>
  <dt>Prefix</dt>
  <dd><%= @server.prefix %></dd>
  <dt>ASN</dt>
  <dd><%= @server.asn %></dd>
  <% unless @server.last_scan.blank? %>
  <dt>Last full scan</dt>
  <dd><%= @server.last_scan %></dd>
  <% end %>
  <% unless @server.other_countries.blank? %>
  <dt>Other countries</dt>
  <dd>
    <%=
      Country.where(code: @server.other_countries.split(/[, ]/)).select(:name).map(&:name).join(', ')
    %>
  </dd>
  <% end %>
</dl>
<h3>Admin Comment</h3>
<pre>
<%= @server.comment %>
</pre>